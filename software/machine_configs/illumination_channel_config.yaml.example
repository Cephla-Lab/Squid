    enabled: true

  - name: "Fluorescence 561nm"
    type: epi_illumination
    wavelength_nm: 561
    controller_port: "D4"
    source_code: 14
    intensity_calibration_file: "561.csv"
    enabled: true

  - name: "Fluorescence 638nm"
    type: epi_illumination
    wavelength_nm: 638
    controller_port: "D3"
    source_code: 13
    intensity_calibration_file: "638.csv"
    enabled: true

  - name: "Fluorescence 730nm"
    type: epi_illumination
    wavelength_nm: 730
