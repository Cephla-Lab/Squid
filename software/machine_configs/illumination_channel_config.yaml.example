version: 1

channels:
  # Transillumination (LED Matrix)
  - name: "BF LED matrix full"
    type: transillumination
    wavelength_nm: null
    controller_port: "USB1"
    source_code: 0
    intensity_calibration_file: null
    enabled: true

  - name: "DF LED matrix"
    type: transillumination
    wavelength_nm: null
    controller_port: "USB1"
    source_code: 3
    intensity_calibration_file: null
    enabled: true

  # Epi-illumination (Fluorescence Lasers)
  - name: "Fluorescence 405nm"
    type: epi_illumination
    wavelength_nm: 405
    controller_port: "D1"
    source_code: 11
    intensity_calibration_file: "405.csv"
    enabled: true

  - name: "Fluorescence 488nm"
    type: epi_illumination
    wavelength_nm: 488
    controller_port: "D2"
